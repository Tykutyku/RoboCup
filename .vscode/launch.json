	"version": "0.2.0",
	"configurations": [
		{
			"name":"Python Debugger: testClient",
			"type":"debugpy",
			"request":"launch",
			"program":"${workspaceFolder}/testclient.py",
			"console":"integratedTerminal",
			"args": [ "--id", "1"]
		},
		{
			"name":"Python Debugger: fileClient",
			"type":"debugpy",
			"request":"launch",
			"program":"${workspaceFolder}/fileClient.py",
			"console":"integratedTerminal",
			"args": ["./example_data/R01-20240606T223833-variant-2.csv"]
		},
		{
			"name": "Python Debugger: Flask",
		    "type": "debugpy",
		    "request": "launch",
		    "module": "flask",
		    "env": {
		        "FLASK_APP": "app.py",
		        "FLASK_DEBUG": "1"
		    },
		    "args": [
		        "run",
		        "--no-debugger",
		        "--no-reload"
		    ],
		    "jinja": true,
		    "justMyCode": true
		}
		
	]
}